<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="9dp"
    android:background="#04B4B3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#F5E1ECEA"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btCompose"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_round"
            android:backgroundTint="#C31221"
            android:text="Compose Message"
            android:textColor="#04B4B3"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="106dp" />

        <Button
            android:id="@+id/btInbox"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:backgroundTint="#0C128A"
            android:text="Inbox"
            android:background="@drawable/bg_round"
            android:textColor="#04B4B3"
            android:textSize="21sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="237dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>